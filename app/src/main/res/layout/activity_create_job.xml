<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfessionalFeatures.CreateJob">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/bg_decrease20dp"
        android:background="@drawable/bg_card"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:background="@drawable/bg_square"
        android:drawablePadding="@dimen/spacing_medium"
        android:fontFamily="@font/googlesansbold"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingTop="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_large"
        android:text="Create Job"
        android:textColor="@color/textheader"
        android:textSize="@dimen/font_large" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="@dimen/spacing_medium"
        android:fontFamily="@font/googlesansbold"
        android:text=""
        android:textColor="@color/textheader"
        android:textSize="@dimen/font_medium" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text="Title of the Job"
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium">

            <EditText
                android:id="@+id/jobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_edittext"
                android:fontFamily="@font/googlesansregular"
                android:hint="Title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:letterSpacing="0.2"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textchild"
                android:textSize="@dimen/font_medium" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text="Location of the Job"
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium">

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_edittext"
                android:fontFamily="@font/googlesansregular"
                android:hint="Location"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:letterSpacing="0.2"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textchild"
                android:textSize="@dimen/font_medium" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text="Plan and Description of Work to be Done"
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium">

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_rounded_border_edittext"
                android:fontFamily="@font/googlesansregular"
                android:hint="Plan"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:letterSpacing="0.2"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textchild"
                android:textSize="@dimen/font_medium" />


        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text="Quotation Price"
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium">

            <EditText
                android:id="@+id/quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_edittext"
                android:fontFamily="@font/googlesansregular"
                android:hint="Quote"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:letterSpacing="0.2"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textchild"
                android:textSize="@dimen/font_medium" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text="Estimated Duration of Job"
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_marginEnd="228dp"
                android:entries="@array/time"
                android:background="@drawable/bg_rounded_border_edittext"
                android:fontFamily="@font/googlesansregular"
                android:padding="@dimen/spacing_medium"
                android:text="Time Period"
                android:textColor="@color/textchild"
                android:textSize="@dimen/font_large" />

            <EditText
                android:id="@+id/duration"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="132dp"
                android:background="@drawable/bg_rounded_border_edittext"
                android:fontFamily="@font/googlesansregular"
                android:hint="Time Estimation"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:letterSpacing="0.2"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textchild"
                android:textSize="@dimen/font_medium" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text="Select Start Date"
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium">

            <TextView
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_border_edittext"
                android:fontFamily="@font/googlesansregular"
                android:hint="Date"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:letterSpacing="0.2"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textchild"
                android:textSize="@dimen/font_medium" />


        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text=""
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@drawable/bg_btn_shape"
        android:fontFamily="@font/googlesansbold"
        android:onClick="getCustomer"
        android:text="Create Job"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text=""
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_navigation"
        tools:layout_editor_absoluteX="208dp" />


</androidx.constraintlayout.widget.ConstraintLayout>