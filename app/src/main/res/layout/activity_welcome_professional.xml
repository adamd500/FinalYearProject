<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProfessionalFeatures.WelcomeProfessional">

    <TextView
        android:id="@+id/nationwideTraffic"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:background="@color/white"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dublinTraffic"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="264dp"
        android:background="@color/white"
        android:ems="10"

        android:scrollbars="vertical"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSchedule"
        android:layout_width="356dp"
        android:layout_height="41dp"
        android:layout_marginLeft="24dp"
        android:onClick="openCalendar"
        android:text="Check Schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_navigation"
        tools:layout_editor_absoluteX="208dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Welcome to Job Connect"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="381dp"
        android:layout_height="16dp"
        android:layout_marginBottom="28dp"
        android:text="See Major Traffic Updates Below Retrieved from AA."
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="381dp"
        android:layout_height="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Nationwide Traffic"
        app:layout_constraintBottom_toTopOf="@+id/nationwideTraffic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="381dp"
        android:layout_height="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Dublin Traffic"
        app:layout_constraintBottom_toTopOf="@+id/dublinTraffic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>