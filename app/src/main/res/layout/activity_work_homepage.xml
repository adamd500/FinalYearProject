<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfessionalFeatures.WorkHomepage">
    <Button
        android:id="@+id/buttonBrowseJobs"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:layout_marginLeft="52dp"
        android:onClick="getJobs"
        android:text="Browse for new job"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/buttonBrowseJobsOnMap"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:onClick="findJobOnMap"
        android:text="Browse New Jobs on Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />
    <Button
        android:id="@+id/buttonAcceptedConsultation"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:onClick="acceptedConsultations"
        android:text="Accepted Consultations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />
    <Button
        android:id="@+id/buttonAllJobs"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:onClick="currentJobs"
        android:text="Current Jobs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_navigation"
        tools:layout_editor_absoluteX="208dp" />
</androidx.constraintlayout.widget.ConstraintLayout>