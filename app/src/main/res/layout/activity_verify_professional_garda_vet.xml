<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFeatures.VerifyProfessionalGardaVet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/txtViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_square"
            android:drawablePadding="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_large"
            android:text="Verify Identity : Upload ID Document"
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_large"
            tools:layout_editor_absoluteX="10dp" />



        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="411dp"
            android:layout_height="500dp"
            android:layout_marginTop="52dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/verifyButton"
            app:layout_constraintTop_toBottomOf="@+id/txtViewTitle"
            tools:layout_editor_absoluteX="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="@dimen/spacing_medium"
            android:fontFamily="@font/googlesansbold"
            android:text=""
            android:textColor="@color/textheader"
            android:textSize="@dimen/font_medium" />

        <Button
            android:id="@+id/sendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:background="@drawable/bg_btn_shape"
            android:fontFamily="@font/googlesansbold"
            android:onClick="verifyGardaVetForm"
            android:text="Verify Garda Vet Form "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />




    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>