<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfessionalFeatures.ArrangeConsultation">


    <TextView
        android:id="@+id/textView"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:text="Schedule a Consultation "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="381dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Proposed Date of Consultation "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="369dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:hint="Proposed Time of Consultation "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.344" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="385dp"
        android:layout_height="107dp"
        android:layout_marginLeft="12dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Message for Client "
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.522" />

    <Button
        android:id="@+id/button"
        android:layout_width="383dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:onClick="sendConsultationDetails"
        android:text="Send to client"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739" />
</androidx.constraintlayout.widget.ConstraintLayout>