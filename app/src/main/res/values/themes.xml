
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FYP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:fontFamily">@font/googlesansregular</item>-->
<!--        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_backspace_black</item>-->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/button</item>
    </style>

    <style name = "button" parent="Widget.AppCompat.Button">
    <item name="android:background">@drawable/custom_button</item>
    </style>


    <style name="Theme.FYP.NoActionBar">
        <item name="windowActionBar">false</item>
        //   <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FYP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FYP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>